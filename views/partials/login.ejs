<div class='col-sm-6 row mainSection p-3 ml-sm-0 ml-1'>
  <form id='login' class='card col-12'>  
    <fieldset class='mt-3'>
      <legend class='w-100 text-center h4 m-0'>Please sign in:</legend><br />
      <label data_defaultTag='Username/Email' for="username">Username/Email:</label> <br />
      <input  class='w-100 m-0 form-control' type="text" name="username"> <br /> 
      <label data_defaultTag='Password' for="password">Password</label> <br />
      <input  class='w-100 m-0 form-control' type="password" name="password"> <br /> 
      <div id='formMessage'></div>
      <div id="formButtons" class='col-12'>
        <div class='row'>
          <input class='btn btn-outline-dark col-6' type="button" onclick='signIn(this)' value="Login">
          <input class='btn btn-outline-dark col-6' type="reset" value="Cancel">
        </div>      
      </div> 
    </fieldset>
    <br />   
    <p>Don't have an account?<br><span class='spanLink btn btn-link' onclick='getSignUpScreen()'>Sign up here!</span></p>
  </form>
</div>